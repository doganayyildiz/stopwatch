  display.println(" Developer\n");
  display.println("{D.YILDIZ}");
  display.display();
  delay(1500);

  display.clearDisplay();
  display.setTextColor(WHITE);
  display.setCursor(20, 20);
  display.setTextSize(4);
  display.println("0:0");
  display.display();

}

void loop() {

  sensor();

  Serial.println(durum);
  if (durum == 1) {
    do {
      sayac();
      if (int(zaman) == 60) {
        zaman = 0;
        dakika++;
      }
      display.clearDisplay();
      display.setTextColor(WHITE);
      display.setCursor(20, 20);
      display.setTextSize(4);
      display.print(dakika);
      display.print(":");
      display.println(int(zaman));
      display.display();
    }
    while (durum != 1);
  }


}

float sayac() {
  yzaman = millis();
  if (yzaman - ezaman > 10) {
    zaman = zaman + 0.35;
    ezaman = yzaman;
  }

  return zaman;
}

int sensor() {

  digitalWrite(trigpin, LOW);
  delay(1);
  digitalWrite(trigpin, HIGH);
  delay(1);
  digitalWrite(trigpin, LOW);
  sure = pulseIn(echopin, HIGH);
  mesafe = sure * 0.034 / 2;

  if (mesafe < 100) {

    durum += 1;
    return durum;

  }

}
